<Window x:Name="Game_Window" x:Class="WPF_App_Viktor.Window1"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WPF_App_Viktor"
		mc:Ignorable="d"
		Title="Game" Height="450" Width="800">


    <Border BorderBrush="black" BorderThickness="5">
        <Canvas Name ="GameStuff" ClipToBounds="True" Height="450" Width="800">
            <Button Background="LightGreen" Foreground="Black" FontWeight="Bold" Click="Button_Click" Canvas.Left="343" Canvas.Top="358" Height="40" Width="114" HorizontalAlignment="Center" VerticalAlignment="Top">Back</Button>
            <TextBlock Name ="Score" FontSize="50" Foreground="blue">
               Score:
            </TextBlock>
            <TextBlock Name ="Score_Value" FontSize="50" Foreground="blue" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="138"><Run Text="0"/></TextBlock>
            <TextBlock Name ="Timer" FontSize="50" Foreground="blue" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="579"></TextBlock>
        </Canvas>
    </Border>

</Window>
